generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model goal_types {
  id          String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  description String
  name        String

  @@map("goal-types")
}

model goals {
  id   String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name String
  type String @db.ObjectId
}

model Job {
  id          String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  cron        String
  status      String
  index       Int     @default(autoincrement()) @db.Int
  name        String?
  lastEndTime Int?    @default(0)
  habits      Habit[]
}

model Habit {
  id          String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name        String
  jobId       String
  job         Job?    @relation(fields: [jobId], references: [id])
  index       Int     @default(autoincrement()) @db.Int
  status      String  @default("due")
  description String?
}
